---
import background from "../assets/background.svg";
import { Icon } from "astro-icon/components";
---

<div id="container">
  <img
    id="background"
    src={background.src}
    alt="Background illustration"
    fetchpriority="high"
    class="pointer-events-none"
  />

  <main class="flex flex-col gap-6 min-h-screen items-start justify-center max-w-xl px-5 mx-auto py-40 md:py-10 ">
    <section>
      <h1 class="text-4xl">Jramma: Frontend Developer</h1>
      <p>
        I am a frontend developer specializing in websites, CMS,
        applications, and user interfaces. My strongest language is TypeScript.
      </p>
    </section>

    <section id="hero" class="flex flex-col gap-6 w-full">
      <div class="space-y-6">
        <div>
          <h2 class="font-medium text-xl">My public websites</h2>
          <ul class="ml-6 mt-2 list-disc space-y-2">
            <li>
              <a href="https://jramma.com" target="_blank" rel="noopener noreferrer">
                Portfolio <Icon class="w-4 h-4 inline-block" name="Link" />
              </a>
            </li>
            <li>
              <a href="https://questtattoostudio.com/" target="_blank" rel="noopener noreferrer">
                Quest Tattoo Studio <Icon class="w-4 h-4 inline-block" name="Link" />
              </a>
            </li>
            <li>
              <a href="https://sorolla.netlify.app/" target="_blank" rel="noopener noreferrer">
                Sorolla Paintings <Icon class="w-4 h-4 inline-block" name="Link" />
              </a>
            </li>
            <li>
              <a href="https://bigcitylife.netlify.app/" target="_blank" rel="noopener noreferrer">
                Big City Life <Icon class="w-4 h-4 inline-block" name="Link" />
              </a>
            </li>
            <li>
              <a href="https://jrammas.netlify.app/" target="_blank" rel="noopener noreferrer">
                Simple portfolio <Icon class="w-4 h-4 inline-block" name="Link" />
              </a>
            </li>
          </ul>
        </div>

        <div>
          <h2 class="font-medium text-xl">My public repositories</h2>
          <ul class="ml-6 mt-2 list-disc">
            <li>
              <a href="https://github.com/jramma/astro-basics" target="_blank" rel="noopener noreferrer">
                GitHub <Icon class="w-4 h-4 inline-block" name="Link" />
              </a>
            </li>
          </ul>
        </div>

        <div>
          <h2 class="font-medium text-xl">Social profiles</h2>
          <ul class="ml-6 mt-2 list-disc">
            <li>
              <a href="https://www.linkedin.com/in/jramma" target="_blank" rel="noopener noreferrer">
                LinkedIn <Icon class="w-4 h-4 inline-block" name="Link" />
              </a>
            </li>
          </ul>
        </div>
      </div>

      <div class="mt-6">
        <iframe
          title="GitHub top languages"
          src="https://github-readme-stats.vercel.app/api/top-langs/?username=jramma&show_icons=true&hide_border=false&layout=compact"
          loading="lazy"
          class="w-full h-auto border-0"
        ></iframe>
      </div>
    </section>
  </main>
</div>
